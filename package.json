{
  "name": "hmpps-welcome-people-into-prison-ui",
  "version": "0.0.1",
  "description": "Hmpps Welcome People Into Prison Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-welcome-people-into-prison-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:ci": "jest --maxWorkers=2",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|jobs)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^3.2.1",
    "agentkeepalive": "^4.5.0",
    "applicationinsights": "^2.9.6",
    "body-parser": "^1.20.3",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "cheerio": "^1.0.0-rc.12",
    "chokidar": "^3.6.0",
    "compression": "^1.7.5",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.0.0",
    "csrf-sync": "^4.0.3",
    "csv-parse": "^5.3.10",
    "esbuild": "^0.24.0",
    "esbuild-plugin-copy": "^2.1.1",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "glob": "^11.0.0",
    "googleapis": "^110.0.0",
    "govuk-frontend": "^5.7.1",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.7.0",
    "jwt-decode": "^4.0.0",
    "moment": "^2.29.4",
    "nocache": "^4.0.0",
    "notifications-node-client": "^8.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^4.7.0",
    "static-path": "^0.0.4",
    "superagent": "^10.1.1",
    "universal-analytics": "^0.5.3",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.1",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-parser": "^1.4.7",
    "@types/cookie-session": "^2.0.49",
    "@types/express-request-id": "^1.4.3",
    "@types/express-session": "^1.18.1",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/superagent": "^8.1.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "audit-ci": "^7.0.1",
    "aws-sdk-client-mock": "^4.0.1",
    "concurrently": "^8.2.2",
    "cypress": "^13.11.0",
    "cypress-multi-reporters": "^1.6.4",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.10",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.5.6",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "sass": "^1.81.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "jest-html-reporter": {
      "@babel/traverse": "7.23.2"
    },
    "notifications-node-client": {
      "axios": "1.7.4"
    },
    "superagent": {
      "formidable": "3.5.1"
    },
    "jest": {
      "jest-core": {
        "micromatch": "4.0.8"
      }
    }
  }
}
