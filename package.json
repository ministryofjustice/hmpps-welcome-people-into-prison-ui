{
  "name": "hmpps-welcome-people-into-prison-ui",
  "version": "0.0.1",
  "description": "Hmpps Welcome People Into Prison Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-welcome-people-into-prison-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "copy-views": "cp -R server/views dist/server/",
    "compile-sass": "sass --quiet-deps --no-source-map --load-path=. --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend ./assets/sass/application.sass:./assets/stylesheets/application.css ./assets/sass/application-ie8.sass:./assets/stylesheets/application-ie8.css --style compressed",
    "watch-ts": "tsc -w",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-node": "DEBUG=gov-starter-server* nodemon -r dotenv/config --watch dist/ dist/server.js | bunyan -o short",
    "watch-sass": "npm run compile-sass -- --watch",
    "build": "npm run compile-sass && tsc && npm run copy-views",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "watch-node-feature": "export $(cat feature.env) && nodemon --watch dist/ $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node-feature\" \"npm run watch-sass\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0 && npm run typecheck",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test:ci": "jest --maxWorkers=2 --coverage --coverageDirectory=coverage",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist build stylesheets"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|jobs)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^3.3.1",
    "@ministryofjustice/hmpps-connect-dps-components": "^2.0.0-beta",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.6",
    "body-parser": "^1.20.3",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "cheerio": "^1.0.0",
    "compression": "^1.8.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^8.0.3",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.0.0",
    "csrf-sync": "^4.2.0",
    "csv-parse": "^5.3.10",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "googleapis": "^110.0.0",
    "govuk-frontend": "^4.9.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.7.0",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.4",
    "nocache": "^3.0.4",
    "notifications-node-client": "^8.2.1",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^4.7.0",
    "static-path": "^0.0.4",
    "superagent": "^10.1.1",
    "universal-analytics": "^0.5.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-parser": "^1.4.7",
    "@types/cookie-session": "^2.0.49",
    "@types/express-request-id": "^1.4.3",
    "@types/express-session": "^1.18.1",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.12",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/superagent": "^4.1.17",
    "@types/supertest": "^2.0.12",
    "@types/universal-analytics": "^0.4.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "audit-ci": "^6.6.1",
    "concurrently": "^9.1.2",
    "cypress": "^13.16.1",
    "cypress-multi-reporters": "^1.6.3",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.0.1",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.5.1",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.5.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "sass": "^1.87.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "superagent": {
      "formidable": "3.5.3"
    },
    "jest": {
      "jest-core": {
        "micromatch": "4.0.8"
      },
      "coverageThreshold": {
        "global": {
          "branches": 0,
          "functions": 0,
          "lines": 0,
          "statements": 0
        }
      }
    }
  }
}
