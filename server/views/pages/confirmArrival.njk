{% extends "../partials/layout.njk" %}
{% from  "../partials/checkThisRecordMacro.njk" import checkThisRecordMacro %}
{% set pageTitle = "Confirm arrival" %}

{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
          <span class="govuk-caption-xl"> Confirm arrival of {{ data.firstName}} {{ data.lastName }} </span>
            <h1 class="govuk-heading-l govuk-!-margin-bottom-7">Check this record matches the person in reception</h1>
                {{ checkThisRecordMacro(data) }}
            <div>
                {{ govukButton({
                    classes: "govuk-button govuk-!-margin-bottom-6",
                    href: "/prisoners/" + data.id + "/imprisonment-status",
                    text: "Continue",
                    attributes: {'data-qa': 'continue'}
                }) }}

                <p>
                    <a class="govuk-body govuk-link govuk-link--no-visited-state" href="/confirm-arrival/choose-prisoner" data-qa="choose-prisoner">
                        Select a different prisoner
                    </a>
                </p>
            </div>
        </main>
    </div>
{% endblock %}

