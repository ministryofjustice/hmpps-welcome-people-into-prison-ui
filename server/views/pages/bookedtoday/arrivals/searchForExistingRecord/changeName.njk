{% extends "../../../../partials/layout.njk" %}

{% set pageTitle = "Change this person's name" %}

{% block content %}
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                {% if errors.length %}
                    {{ govukErrorSummary({
                        titleText: "There is a problem",
                        errorList: errors,
                        attributes: { 'data-qa-errors': true }
                }) }}
            {% endif %}
                <span class="govuk-caption-xl">Confirm a prisoner's arrival</span>
                <h1 class="govuk-heading-l">{{pageTitle}}</h1>
                <form method="post">
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                    {% call govukFieldset({ legend: {} }) %}
                        {{ govukInput({
                            label: { text: 'First names' },
                            id: "first-name",
                            name: "firstName",
                            classes: 'govuk-input--width-20',
                            value: data.firstName,
                            errorMessage: errors | findError("first-name")
                        }) }}

                        {{ govukInput({
                            label: { text: 'Last name' },
                            id: "last-name",
                            name: "lastName",
                            classes: 'govuk-input--width-20',
                            value: data.lastName,
                            errorMessage: errors | findError("last-name")
                        }) }}

                    {% endcall %}

                    {{ govukButton({
                            classes: "govuk-button govuk-!-margin-bottom-3",
                            text: "Save and continue",
                            attributes: {'data-qa': 'save'}
                    }) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}