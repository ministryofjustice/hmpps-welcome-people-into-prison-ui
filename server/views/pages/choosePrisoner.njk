{% extends "../partials/layout.njk" %}
{% from  "../partials/expectedArrivalCardMacro.njk" import expectedArrivalCardMacro %}
{% set pageTitle = applicationName + " - Home" %}
{% block content %}
    <div class="govuk-!-margin-bottom-8">
        <div class="govuk-width-container govuk-body">
            <h1>Select prisoner to add to the establishment roll</h1>
                <h2 class="govuk-heading-m govuk-!-margin-top-9">Prisoners arriving from court</h2>
                    {% for arrival in expectedArrivals.get("COURT") %}
                        {{ expectedArrivalCardMacro(arrival, "COURT", loop.index)}}
                    {% else %}
                        <p data-qa="no-arrivals-from-court">There are currently no prisoners booked to arrive from court today.</p>
                    {% endfor %}

                <h2 class="govuk-heading-m govuk-!-margin-top-9">Prisoners arriving from a custody suite</h2>
                    {% for arrival in expectedArrivals.get("CUSTODY_SUITE") %}
                        {{ expectedArrivalCardMacro(arrival, "CUSTODY_SUITE", loop.index)}}
                    {% else %}
                        <p data-qa="no-arrivals-from-custody-suite">There are currently no prisoners booked to arrive from a custody suite today.</p>
                    {% endfor %}

                 <h2 class="govuk-heading-m govuk-!-margin-top-9">Prisoners arriving from another establishment</h2>
                    {% for arrival in expectedArrivals.get("PRISON") %}
                        {{ expectedArrivalCardMacro(arrival, "PRISON", loop.index)}}
                    {% else %}
                        <p data-qa="no-arrivals-from-another-establishment">There are currently no prisoners booked to arrive from another establishment today.</p>
                    {% endfor %}
        </div>
    </div>
{% endblock %}
