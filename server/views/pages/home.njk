{% extends "../partials/layout.njk" %}
{% from "../components/card.njk" import card %}
{% set title = "Welcome people into prison" %}
{% set feedbackBannerBackground = 'feedbackBannerBackground'%}

{% block main %}
    <div class="govuk-width-container">
        <h1 class="govuk-heading-l govuk-!-margin-top-7">{{ title }}</h1>
    </div>
    <div class="homepage-content">
        <div class="govuk-width-container">
            <ul class="govuk-grid-row card-group">
                <li class="govuk-grid-column-one-third card-group__item">
                    {{ card({
                        "href": '/confirm-arrival/choose-prisoner',
                        "clickable": "true",
                        "heading": 'Prisoners booked to arrive today',
                        "description": 'Confirm the arrival of people booked to arrive into prison today.',
                        "data-qa": "choose-prisoner"
                    }) }}
                </li>
                {% if temporaryAbsencesEnabled %}
                    <li class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "href": '/prisoners-returning',
                            "clickable": "true",
                            "heading": 'Prisoners returning from temporary absence',
                            "description": 'Confirm the return of prisoners out on temporary absence.',
                            "data-qa": "return-from-temporary-absence"
                        }) }}
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}
{% block pageScripts %}
    <script src="/assets/js/card.js"></script>
{% endblock %}
